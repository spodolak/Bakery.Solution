@{
  Layout = "_Layout";
}

@using DoctorOffice.Models;
@model List<DoctorOffice.Models.Patient>

<h1>PATIENTS</h1>

@if (@Model.Count == 0)
{
  <h3>No patients have been added yet!</h3>
}
<ul>
@foreach (Patient patient in Model)
{
  <li>@Html.ActionLink($"{patient.Name}", "Details", "Patients", new {id = patient.PatientId})</li>
}
</ul>

@Html.ActionLink("Add New Patient", "Create", "Patients", null, new { @class="btn-block"})