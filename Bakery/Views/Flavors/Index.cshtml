@{
  Layout = "_Layout";
}
@Html.Partial("Header")
@using Bakery.Models;
@model List<Bakery.Models.Flavor>;

<h1>FLAVORS</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 

@foreach (Flavor flavor in Model)
{
  <li>@Html.ActionLink($"{flavor.Description}", "Details", new { id = flavor.FlavorId })</li>
}

@Html.ActionLink("ADD NEW FLAVOR", "Create", "Flavors", null, new { @class="btn-block" })